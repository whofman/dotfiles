# Functions {{{
# Torrent/Magnet supprt
tsm()       { transmission-remote -l ;}
tsmadd()    { transmission-remote -a "$1" ;}
tsm-purge() { transmission-remote -t "41" --remove-and-delete ;}
tsm-info()  { transmission-remote -t "$1" -i ;}

# Search the volume catalog
pd() { grep -i $1 ~/Documents/Other/db/diskcat.db | awk -F';' -f ~/Documents/Other/db/diskcat.awk }

# View  .md files in terminal with glow
mdless() { glow "$@" -s dark | less -f }

# Search functions
vs() { du -a ~/.scripts/* ~/.config/* | awk '{print $2}' | fzf | xargs -r $EDITOR }

fv() { fzf | xargs -r -I % $EDITOR % }

# }}}
